<% provide(:title, "ユーザー情報 : #{@user.name}") %>
<h1><%= @user.name %></h1>
<% if @user.id == @current_user.id || @current_user.admin_auth != 0 %>
  <%= link_to '編集', edit_user_path %>
  <% if @current_user.admin_auth != 0 %>
    <%= link_to '強制退会', user_path, method: :delete %>
  <% end %>
<% end %>
<p><%= @user.profile %></p>
