<% provide(:title, "プロフィール編集") %>
<div class="users-new-wrapper">
  <div class="container container-contents">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 users-new-container">
        <h1 class="text-center text-white">プロフィール編集</h1>
        <%= form_for @user do |f| %>
         <input name="_method" type="hidden" value="patch" />
          <div class="form-group">
            <%= f.label 'お名前', class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <%= f.hidden_field :email, value: @user.email %>
          <div class="form-group">
            <%= f.label '称号を表示する', class: 'text-white' %>
            <%= f.check_box :title_setting, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label '自己紹介', class: 'text-white' %>
            <%= f.text_area :profile, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label '新しいパスワード', class: 'text-white' %>
            <p style="font-size: 12px">パスワードを変えない場合は今までのパスワードを入力してください</p>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label '新しいパスワードをもう一度入力してください', class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <%= f.submit "更新", class: 'btn-block btn-white' %>
        <% end %>
      </div>
      <div class="col-md-offset-3 col-md-6">
        <%# 退会機能は無効にする %>
        <%# link_to "退会する", resign_user_path %>
      </div>
    </div>
  </div>
</div>