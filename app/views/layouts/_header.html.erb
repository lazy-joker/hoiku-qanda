<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= image_tag "logo.png", alt: "ほいくQ&A", class: 'image-logo' %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <form action="/questions/index" method="get" class="form-inline nav-search">
  	          <input type="text" name="search" class="form-control" placeholder="質問を検索">
        	    <input type="submit" class="btn btn-primary" text="検索">
	          </form>
          </li>
          <li><%= link_to "ホーム", home_path %></li>
          <li><%= link_to "質問一覧", questions_index_path %></li>
          <li><%= link_to '質問を作成', questions_new_path %></li>
          <li><%= link_to @current_user.name, edit_user_path(@current_user.id) %></li>
          <li><%= link_to "ヘルプ",  '/pages/help_index' %></li>
          <li><%= link_to "ログアウト", logout_path, method: 'delete' %></li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
          <li><%= link_to "ヘルプ",  '/pages/help_index' %></li>
          <li><%= link_to "新規登録", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
  <% end %>
</header>
